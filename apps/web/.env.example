# =============================================================================
# Kaarplus Web — Environment Variables
# Copy this file to .env.local and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# API & Site URLs
# -----------------------------------------------------------------------------
# URL of the Express backend API server
NEXT_PUBLIC_API_URL=http://localhost:4000

# Public URL of this Next.js frontend (used for canonical links, OG images, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# NextAuth.js (Authentication)
# See: https://authjs.dev/getting-started/installation
# -----------------------------------------------------------------------------
# Full URL of the Next.js app (must match NEXT_PUBLIC_SITE_URL in production)
NEXTAUTH_URL=http://localhost:3000

# Random secret for signing JWTs — generate with: openssl rand -base64 32
NEXTAUTH_SECRET=change-me-in-production

# -----------------------------------------------------------------------------
# Stripe (Payments)
# See: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
# Publishable key — safe to expose to the browser (starts with pk_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# -----------------------------------------------------------------------------
# AWS S3 (Image Uploads — optional, used by upload UI)
# See: https://s3.console.aws.amazon.com
# -----------------------------------------------------------------------------
# S3 bucket name for storing vehicle images
NEXT_PUBLIC_S3_BUCKET=kaarplus-images

# AWS region where the S3 bucket is located
NEXT_PUBLIC_S3_REGION=eu-central-1

# -----------------------------------------------------------------------------
# Sentry (Error Tracking)
# -----------------------------------------------------------------------------
# Sentry Data Source Name (DSN)
NEXT_PUBLIC_SENTRY_DSN=

# Sentry Auth Token (used for uploading source maps)
SENTRY_AUTH_TOKEN=

# -----------------------------------------------------------------------------
# Feature Flags (optional)
# -----------------------------------------------------------------------------
# Set to "true" to enable the cookie consent banner in development
NEXT_PUBLIC_COOKIE_CONSENT=true

# Set to "true" to enable Google Analytics / analytics events
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Google Analytics Measurement ID (G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID=
